<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.softmax.marvel.mapper.AuthMapper">

    <resultMap id="authUserMap" type="com.softmax.marvel.entity.AuthUser">
        <id property="id" column="ID"/>
        <result property="username" column="user_name"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="findByUserName" parameterType="String" resultMap="authUserMap">
        SELECT *
        FROM auth_user
        WHERE user_name= #{username}
    </select>

    <insert id="register" parameterType="com.softmax.marvel.entity.AuthUser">
        <selectKey resultType="int" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT into auth_user
        (user_name,password)
        values
        (#{username},#{password})
    </insert>
</mapper>